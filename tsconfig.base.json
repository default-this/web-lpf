{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@app/shared-misc": ["modules/shared/misc/src/index.ts"],
      "@app/bindings": ["modules/bindings/src/index.ts"],
      "@app/shared-ui": ["modules/shared/ui/src/index.ts"],
      "@app/shared-i18n": ["modules/shared/i18n/src/index.ts"],
      "@app/shared-control-schemes": ["modules/shared/control-schemes/src/index.ts"],
      "@app/shared-controller": ["modules/shared/controller/src/index.ts"],
      "@app/controller-profiles": ["modules/shared/controller-profiles/src/index.ts"],
      "@app/store": ["modules/store/src/index.ts"],
      "@app/about": ["modules/features/about/src/index.ts"],
      "@app/bluetooth-unavailable": ["modules/features/bluetooth-unavailable/src/index.ts"],
      "@app/not-found": ["modules/features/not-found/src/index.ts"],
      "@app/settings": ["modules/features/settings/src/index.ts"],
      "@app/control-scheme-binding-create": ["modules/features/control-scheme-binding-create/src/index.ts"],
      "@app/control-scheme-binding-edit": ["modules/features/control-scheme-binding-edit/src/index.ts"],
      "@app/control-scheme-view": ["modules/features/control-scheme-view/src/index.ts"],
      "@app/control-schemes-list": ["modules/features/control-schemes-list/src/index.ts"],
      "@app/control-scheme-port-config-edit": ["modules/features/control-scheme-port-config-edit/src/index.ts"],
      "@app/controller-view": ["modules/features/controller-view/src/index.ts"],
      "@app/controllers-list": ["modules/features/controllers-list/src/index.ts"],
      "@app/hub-edit": ["modules/features/hub-edit/src/index.ts"],
      "@app/hub-view": ["modules/features/hub-view/src/index.ts"],
      "@app/hubs-list": ["modules/features/hubs-list/src/index.ts"],
      "@app/root": ["modules/features/root/src/index.ts"],
    },
    "types": ["web-bluetooth", "jest", "node", "lzma"],
    "typeRoots": ["node_modules/@types", "./types/lzma"]
  },
  "exclude": ["node_modules", "tmp"]
}
